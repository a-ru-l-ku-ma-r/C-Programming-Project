/********************************************************************
           Find Odd / Even number using Bit Masking
********************************************************************/

#include <stdio.h>

int main()
{
	int n;

	printf("enter no: ");

	scanf("%d",&n);

	if(n&1==1)
		printf("it's odd no");//for odd no LSB 1
	else
		printf("it's even no");//for even no LSB 0

	return 0;
}
