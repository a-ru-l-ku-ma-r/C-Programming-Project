/******************************************************
                1-D Array Input/Output
******************************************************/
#include <stdio.h>

int main()
{
    int current[5], i, sum=0;
    float avg_ct;

    printf("Enter the value of current : \n");
    for(i=0; i<5; i++)
        scanf("%d", &current[i]);


    printf("\nDisplay the current value : \n");
    for(i=0; i<5; i++)
        printf("%dA\n", current[i]);

    printf("\nSum of current : \n");
    for(i=0; i<5; i++)
        sum += current[i];
    printf("%dA\n", sum);

    printf("\nAVerage value of current :\n");
    avg_ct = (float) sum / 5;
    printf("%fA", avg_ct);

    return 0;
}

/**************************************************************************
                            Compiler Output
Enter the value of current :
8
6
9
4
1

Display the current value :
8A
6A
9A
4A
1A

Sum of current :
28A

AVerage value of current :
