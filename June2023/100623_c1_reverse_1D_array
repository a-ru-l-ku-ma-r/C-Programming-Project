/*****************************************************************************
                     Reverse Array in 1D Array
*****************************************************************************/

#include <stdio.h>

int main()
{
    int arr[100], n, i;

    printf("Enter the size of Array : \n");
    scanf("%d",&n);

    printf("Enter the array : \n");
    for(i=0; i<n; i++)
        scanf("%d", &arr[i]);

    printf("Reversed Array : \n");
    for(i=n-1; i>=0; i--)
        printf("%d ", arr[i]);


    return 0;
}

/***************************************************************************
                          Compiler Output
Enter the size of Array :
8
Enter the array :
2
6
8
9
7
5
4
10
Reversed Array :
10 4 5 7 9 8 6 2
Process returned 0 (0x0)   execution time : 22.937 s
