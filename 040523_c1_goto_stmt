/********************goto statement*******************************/
//a loop program to print 1 to 5 on one by one using goto statement


#include<stdio.h>

int main()
{
    int x;
    x= 1;

    loop : if(x < 6)
    {
        printf("%d\n", x);
        x +=1;   // x = x+1;
        goto loop;
    }


    return 0;
}



/**********************************************************************
/////////////////////////compiler output///////////////////////////////
1
2
3
4
5

